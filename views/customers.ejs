<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <style>
            *{box-sizing: border-box;margin: 0;}
            body{width:75%;margin: 0 auto;}
            #add {margin: 5px 0px}
            td:last-child{ text-align: right }
            form{
                float: right;
                margin-left: 5px;
            }
        </style>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>
        <a href='/customer/add'><button id='add' type="button" class="btn btn-primary">Add Customer</button></a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"> Id </th>
                    <th scope="col"> Name </th>
                    <th scope="col"> Email </th>
                    <th scope="col"> Phone </th>
                    <th scope="col"> City </th>
                    <th scope="col"> Street </th>
                    <th scope="col" colspan="2"> Zipcode </th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach( (customer) => { %>
                    <tr>
                        <td> <%= customer.customer_id %> </td>
                        <td> <%= customer.name %> </td>
                        <td> <%= customer.email %> </td>
                        <td> <%= customer.phone %> </td>
                        <td> <%= customer.city %> </td>
                        <td> <%= customer.street %> </td>
                        <td> <%= customer.zipcode %> </td>
                        <td>
                            <a href='/customer/edit/<%= customer.customer_id %>'><button type="button" class="btn btn-primary btn-sm">Edit</button></a>
                            <form action="/customer/delete/<%= customer.customer_id %>" method="POST">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </body>
</html>