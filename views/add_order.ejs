<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <style>body{width:75%;margin: 0 auto;}</style>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>

        <form action="/order/add" method="POST">
            <br>
            <div><label class="form-label" for="customer_ids">Customer Id</label><br>
                <select name="customer_ids" class="form-select" aria-label="Default select example">
                    <% customer_ids.forEach( (customer_id) => { %>
                        <option value="<%= customer_id.customer_id %>"><%= customer_id.customer_id %></option>
                    <% }) %>
                </select><br>
            </div>
            <div>
            <label class="form-label" for="product_ids">Product Id</label><br>
                <select name="product_ids" class="form-select" aria-label="Default select example">
                    <% product_ids.forEach( (product_id) => { %>
                        <option value="<%= product_id.product_id %>"><%= product_id.product_id %></option>
                    <% }) %>
                </select><br>
            </div>
            <div class="mb-3">
                <label class="form-label" for="quantity">Quantity</label><br>
                <input class="form-control" type="number" name="quantity" placeholder="0">
            </div>
            <br><br>
            <input type="submit" class="btn btn-primary">
        </form>
    </body>
</html>